{{>header}}
<div class="container">
	<div id="headline">
		<h1>{{#__}}Login{{/__}}</h1>
	</div>
	{{^_user}}
	<div class="row">
		<div class="col-md-6 col-md-offset-3 white-box">
			<form action="{{{url}}}/login" method="post" class="form" role="form">
				<div class="form-group">
					<label for="username">{{#__}}Username{{/__}}</label>
					<input type="text" name="username" class="form-control" id="username" value="{{username}}" placeholder="{{#__}}Your username{{/__}}">
				</div>
				<div class="form-group">
					<label for="invite">{{#__}}Password{{/__}}</label>
					<input type="password" name="password" class="form-control" id="password" value="" placeholder="">
				</div>
				<button type="submit" class="btn btn-primary">{{#__}}Login{{/__}}</button>
			</form>
		</div>
	</div>
	{{/_user}}
</div>
{{>footer}}